    "extract-text-webpack-plugin": "^0.8.2",
    "feature-toggles": "^1.4.0",
    "fs": "0.0.2",
    "gulp": "^3.9.0",
    "gulp-chmod": "^1.3.0",
    "helmet": "^0.15.0",
    "html-webpack-plugin": "^2.16.0",
    "js-yaml": "^3.4.6",
    "jscs": "^3.0.7",
    "jsdom": "^9.8.3",
    "jsonwebtoken": "^5.7.0",
    "kue": "^0.11.5",
    "lodash": "^4.0.0",
    "mocha": "^3.1.2",
    "multer": "^1.0.3",
