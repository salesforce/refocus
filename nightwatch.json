
{
  "src_folders" : ["tests"],
  "output_folder" : "reports",
  "custom_commands_path" : "./tests/e2e/commands",
  "custom_assertions_path" : "",
  "page_objects_path" : "",
  "globals_path" : "./tests/e2e/global.js",

  "selenium" : {
    "start_process" : false,
    "server_path" : "./selenium-server-standalone-3.0.1.jar",
    "log_path" : "",
    "port" : 4444,
    "cli_args" : {
      "webdriver.chrome.driver" : "./chromedriver",
      "webdriver.gecko.driver" : "./geckodriver",
      "webdriver.edge.driver" : ""
    }
  },

  "test_settings" : {
    "default" : {
      "launch_url" : "http://localhost",
      "selenium_port"  : 4444,
      "selenium_host"  : "localhost",
      "silent": true,
      "screenshots" : {
        "enabled" : true,
        "path" : ""
      },
      "desiredCapabilities": {
        "browserName": "chrome",
        "loggingPrefs": { "browser": "ALL" },
        "chromeOptions" : {
          "args" : ["--no-sandbox"]
        },
        "acceptSslCerts": true,
        "marionette": true
      }
    },

    "chrome" : {
      "desiredCapabilities": {
        "browserName": "chrome"
      }
    },

    "edge" : {
      "desiredCapabilities": {
        "browserName": "MicrosoftEdge"
      }
    }
  }
}

