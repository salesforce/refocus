{
  "name": "Refocus",
  "description": "Refocus",
  "repository": "https://github.com/salesforce/refocus",
  "keywords": ["node", "refocus", "salesforce"],
  "addons": ["heroku-postgresql:hobby-dev", "heroku-redis:hobby-dev"],
  "stack": "heroku-20",
  "environments": {
    "test": {
      "scripts": {
        "test-setup": "npm run checkdb",
        "test": "npm run test"
      },
      "addons":[
        "heroku-redis:in-dyno",
        "heroku-postgresql:in-dyno"
      ],
      "env": {
        "PGSSLMODE": {
          "value": "require"
        },
        "SECRET_TOKEN": {
          "description": "A secret key for creating jwt token used for authentication.",
          "value": "CHANGE_ME"
        },
        "SESSION_SECRET": {
          "description": "A secret key for signing the session ID cookie.",
          "value": "CHANGE_ME"
        }
      }
    },
    "production": {
      "env": {
        "PGSSLMODE": {
          "value": "require"
        },
        "SECRET_TOKEN": {
          "description": "A secret key for creating jwt token used for authentication.",
          "generator": "secret"
        },
        "SESSION_SECRET": {
          "description": "A secret key for signing the session ID cookie.",
          "generator": "secret"
        }
      }
    },
    "sandbox": {
      "env": {
        "PGSSLMODE": {
          "value": "require"
        },
        "SECRET_TOKEN": {
          "description": "A secret key for creating jwt token used for authentication.",
          "generator": "secret"
        },
        "SESSION_SECRET": {
          "description": "A secret key for signing the session ID cookie.",
          "generator": "secret"
        }
      }
    }
  }
}
